@model BooksOnDoor.Models.Models.MailData

@{
    ViewData["Title"] = "SendEmail";
}

<h1>SendEmail</h1>

<h4>MailData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailToId" class="control-label"></label>
                <input asp-for="EmailToId" class="form-control" />
                <span asp-validation-for="EmailToId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailToName" class="control-label"></label>
                <input asp-for="EmailToName" class="form-control" />
                <span asp-validation-for="EmailToName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailSubject" class="control-label"></label>
                <input asp-for="EmailSubject" class="form-control" />
                <span asp-validation-for="EmailSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailBody" class="control-label"></label>
                <input asp-for="EmailBody" class="form-control" />
                <span asp-validation-for="EmailBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
