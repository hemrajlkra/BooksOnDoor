@model OrderVM
<form method="post">
    <input asp-for="orderHeader.Id" hidden/>
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-controller="Order" asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                    <input asp-for="orderHeader.Name" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeader.Name"></span>    
                                    }
                                    else{
                                        <input asp-for="orderHeader.Name" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.PhoneNumber" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.PhoneNumber"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PhoneNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.StreetAddress" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.StreetAddress"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.StreetAddress" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.City" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.City"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.City" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.State" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.State"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.State" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.PostalCode" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.PostalCode"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PostalCode" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.ApplicationUser.Email" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.ApplicationUser.Email"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.ApplicationUser.Email" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.OrderDate" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.OrderDate"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.OrderDate" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.Carrier" id="carrier" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.Carrier"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.Carrier" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.TrackingNumber" id="trackingNumber" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.TrackingNumber"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.TrackingNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.ShippingDate" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.ShippingDate"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.ShippingDate" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Session ID</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.SessionId" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.SessionId"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.SessionId" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Intent ID</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.PaymentIntentId" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.PaymentIntentId"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PaymentIntentId" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">

                                <div class="col-3">Payment Due Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.PaymentDueDate" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.PaymentDueDate"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PaymentDueDate" readonly type="text" class="form-control" />
                                    }
                                </div>

                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.PaymentDate" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.PaymentDate"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PaymentDate" readonly type="text" class="form-control" />
                                    }
                                </div>

                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                                    {
                                        <input asp-for="orderHeader.PaymentStatus" type="text" class="form-control" />
                                        <span asp-validation-for="orderHeader.PaymentStatus"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PaymentStatus" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Company))
                            {
                                <button type="submit" asp-action="UpdateOrderDetails" class="btn btn-warning form-control my-1">Update Order Details</button>
                            }

                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.orderHeader.OrderStatus</label>

                            <ul class="list-group mb-3">
                                @foreach(var orders in Model.orderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-primary">@orders.Product.Title</h6>
                                                <small class="text-muted">Price : ₹@orders.Product.Price.ToString()</small><br />
                                                <small class="text-muted">Quantity : @orders.Count</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">₹@((orders.Count * orders.Product.Price).ToString())</p>
                                            </div>
                                        </div>
                                    </li>    
                                }

                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">₹@Model.orderHeader.OrderTotal.ToString()</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if(Model.orderHeader.PaymentStatus==SD.PaymentStatusDelayedPayment &&
                                        Model.orderHeader.OrderStatus == SD.StatusShipped)
                            {
                                <button type="submit" class="btn btn-success form-control my-1">Pay Now</button>
                            }
                            @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {
                                @if (Model.orderHeader.OrderStatus == SD.StatusApproved)
                                {
                                    <button asp-controller="Order" asp-action="StartProcessing" type="submit" class="btn btn-primary form-control my-1" value="">Start Processing</button>
                                }
                                @if (Model.orderHeader.OrderStatus == SD.StatusInProcess)
                                {
                                    <button type="submit" asp-controller="Order" asp-action="ShipOrder" onclick="return validateInput()"  class="btn btn-primary form-control my-1">Ship Order</button>
                                    
                                }
                                @if(Model.orderHeader.OrderStatus!=SD.StatusRefund &&
                                    Model.orderHeader.OrderStatus != SD.StatusShipped &&
                                    Model.orderHeader.OrderStatus != SD.StatusCancelled)
                                {
                                    <button type="submit" asp-action="CancelOrder" asp-controller="order" class="btn btn-danger form-control my-1" >Cancel Order</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function validateInput(){
            if(document.getElementById("trackingNumber").value==""){
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter Tracking number'
                });
                return false;
            }
            if (document.getElementById("carrier").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter Carrier number'
                });
                return false;
            }
            return true;
        }
    </script>
}