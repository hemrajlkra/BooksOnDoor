@model List<Category>
@if(TempData["Success"] != null){
    <h2>@TempData["Success"]</h2>
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Create New Category
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Name</td>
                <td>Display Order</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i>&nbsp; Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>